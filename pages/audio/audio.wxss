.music {
    display: flex;
    margin:30rpx 0;
}
.player{
    width:100%;
    margin-top: 20px;
}
#myAudio{
    width:100%;
    text-align: center;
}
.lyric{
    height:50px;
    background:#333;
    color:#eee;
    padding:0 30rpx;
}

.button{
